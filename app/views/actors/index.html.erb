<h1>Listing actors</h1>

<table>
  <tr>
    <th>Index</th>
    <th>Show</th>
    <th>New</th>
    <th>Create</th>
    <th>Update</th>
    <th>Destroy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @actors.each do |actor| %>
  <tr>
    <td><%= actor.index %></td>
    <td><%= actor.show %></td>
    <td><%= actor.new %></td>
    <td><%= actor.create %></td>
    <td><%= actor.update %></td>
    <td><%= actor.destroy %></td>
    <td><%= link_to 'Show', actor %></td>
    <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
    <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

